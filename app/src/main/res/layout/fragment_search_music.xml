<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/search_fragment_search_field"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_signup_fields"
        android:drawableStart="@drawable/icon_search_yellow"
        android:paddingStart="10dp"
        android:hint="Search"
        app:layout_constraintEnd_toEndOf="@id/music_for_you"
        app:layout_constraintStart_toStartOf="@id/music_for_you"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/music_for_you"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="For You"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_fragment_search_field" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_music_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/music_for_you"
        app:layout_constraintStart_toStartOf="@+id/music_for_you"
        app:layout_constraintTop_toBottomOf="@+id/music_for_you" />


</androidx.constraintlayout.widget.ConstraintLayout>