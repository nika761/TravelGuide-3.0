<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/splashScreenBackground"
    tools:context=".opening.activity.SplashScreenActivity">

    <LinearLayout
        android:id="@+id/linear_main_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/splashScreenBackground"
        android:gravity="center">

        <ImageView
            android:id="@+id/main_icon_sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@drawable/main_icon_sun" />

        <TextView
            android:id="@+id/main_logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_text" />

    </LinearLayout>

    <TextView
        android:id="@+id/just_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_main_logo"
        app:layout_constraintEnd_toEndOf="@id/linear_main_logo"
        android:text="Just Go !"
        android:textColor="@color/yellowTextView"
        android:textSize="25sp"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>
