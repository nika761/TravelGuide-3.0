<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/following_user_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintEnd_toStartOf="@id/following_user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/following_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Nika"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/following_user_last_name"
        app:layout_constraintStart_toEndOf="@id/following_user_image"
        app:layout_constraintTop_toTopOf="@id/following_user_image" />

    <TextView
        android:id="@+id/following_user_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Butskhrikidze"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/following_user_name"
        app:layout_constraintTop_toTopOf="@id/following_user_name" />

    <TextView
        android:id="@+id/following_user_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Butskhrikidze"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/following_user_name"
        app:layout_constraintTop_toBottomOf="@id/following_user_name" />

</androidx.constraintlayout.widget.ConstraintLayout>