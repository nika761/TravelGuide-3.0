<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/change_password_main_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="@string/reset_password_intro"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/change_password_current_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="@string/current_password" />


                <EditText
                    android:id="@+id/change_password_current_field"
                    android:layout_width="282dp"
                    android:layout_height="38dp"
                    android:background="@drawable/selector_input_field"
                    android:hint="@string/hint_for_passwords"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textCursorDrawable="@drawable/custom_cursor_yellow"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/change_password_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/password" />

                <EditText
                    android:id="@+id/change_password_field"
                    android:layout_width="282dp"
                    android:layout_height="38dp"
                    android:background="@drawable/selector_input_field"
                    android:hint="@string/hint_for_passwords"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textCursorDrawable="@drawable/custom_cursor_yellow"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/change_password_confirm_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/confirm_password" />

                <EditText
                    android:id="@+id/change_password_confirm_field"
                    android:layout_width="282dp"
                    android:layout_height="38dp"
                    android:background="@drawable/selector_input_field"
                    android:hint="@string/hint_for_passwords"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textCursorDrawable="@drawable/custom_cursor_yellow"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/change_password_save"
                    android:layout_width="200dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/bg_btn"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
