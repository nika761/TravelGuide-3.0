<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/photo_item"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/snow_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/edit_photo_item_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/mainColorTransparent"
        android:elevation="1dp"
        android:src="@drawable/edit_on_photo"
        app:layout_constraintBottom_toBottomOf="@id/photo_item"
        app:layout_constraintStart_toStartOf="@id/photo_item" />

</androidx.constraintlayout.widget.ConstraintLayout>