<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/describe_story_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:text="Post"
        app:layout_constraintBottom_toTopOf="@id/describe_story_container"
        app:layout_constraintStart_toStartOf="@id/describe_story_container"
        app:layout_constraintTop_toTopOf="@id/describe_story_container" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/describe_story_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_signup_fields"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Describe your story"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/describe_story_photo"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:background="@drawable/e_image_6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/blackStatusBar"
            android:gravity="center"
            android:text="Select Cover"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/describe_story_photo"
            app:layout_constraintEnd_toEndOf="@id/describe_story_photo"
            app:layout_constraintStart_toStartOf="@id/describe_story_photo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="@id/describe_story_container"
        app:layout_constraintStart_toStartOf="@id/describe_story_container"
        app:layout_constraintTop_toBottomOf="@id/describe_story_container">

        <TextView
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:background="@drawable/bg_describe"
            android:gravity="center"
            android:text="# Hashtags"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_describe"
            android:gravity="center"
            android:text="\@ Friends"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_describe"
            android:drawableStart="@drawable/icon_location"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>