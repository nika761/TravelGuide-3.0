<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/linear_scroll_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/user_prf_back_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/icon_back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/drawer_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:background="@drawable/icon_menu"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Edit Profile"
            android:textSize="16sp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/linear_scroll_edit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_edit">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingEnd="30dp"
            android:paddingBottom="15dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/edit_profile_image"
                    android:layout_width="107dp"
                    android:layout_height="102dp"
                    android:layout_gravity="center" />

                <View
                    android:id="@+id/change_photo_btn"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|center" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/icon_change_photo" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Change Photo"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </FrameLayout>

            <TextView
                android:id="@+id/edit_name_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/name"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="282dp"
                android:layout_height="42dp"
                android:background="@drawable/bg_register_field"
                android:drawableEnd="@drawable/icon_edit"
                android:padding="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/edit_surname_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:text="@string/surname"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_surname"
                android:layout_width="282dp"
                android:layout_height="42dp"
                android:background="@drawable/bg_register_field"
                android:drawableEnd="@drawable/icon_edit"
                android:padding="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/edit_nick_name_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:text="@string/nick_name"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_nick_name"
                android:layout_width="282dp"
                android:layout_height="42dp"
                android:background="@drawable/bg_register_field"
                android:drawableEnd="@drawable/icon_edit"
                android:padding="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/edit_birth_date_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:text="@string/birth_date"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/edit_birth_date"
                android:layout_width="282dp"
                android:layout_height="42dp"
                android:background="@drawable/bg_register_field"
                android:drawableEnd="@drawable/icon_edit"
                android:gravity="center_horizontal"
                android:hint="DD -- MM -- YYYY"
                android:padding="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/edit_mail_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:text="@string/email"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="282dp"
                android:layout_height="42dp"
                android:background="@drawable/bg_register_field"
                android:drawableEnd="@drawable/icon_edit"
                android:padding="10dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/edit_phone_number_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:text="@string/phone_number"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/register_phone_number_container"
                android:layout_width="282dp"
                android:layout_height="42dp"
                android:background="@drawable/bg_register_field"
                android:orientation="horizontal">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_showFlag="true"
                    app:ccp_textSize="14sp" />

                <EditText
                    android:id="@+id/edit_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1.5"
                    android:inputType="number|phone"
                    android:padding="10dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/edit_country_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:text="Country/Region"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_country"
                android:layout_width="282dp"
                android:layout_height="42dp"
                android:background="@drawable/bg_register_field"
                android:drawableEnd="@drawable/icon_edit"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:minEms="8"
                android:padding="10dp"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/edit_password_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:text="@string/password"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="282dp"
                android:layout_height="42dp"
                android:background="@drawable/bg_register_field"
                android:drawableEnd="@drawable/icon_edit"
                android:hint="min 8 symbols"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:minEms="8"
                android:padding="10dp"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/edit_confirm_password_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:text="Bio"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_bio"
                android:layout_width="282dp"
                android:layout_height="42dp"
                android:background="@drawable/bg_register_field"
                android:drawableEnd="@drawable/icon_edit"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:minEms="8"
                android:padding="10dp"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/edit_save_btn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_sign_up"
                android:gravity="center"
                android:padding="8dp"
                android:text="SAVE"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
