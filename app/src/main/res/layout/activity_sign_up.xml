<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingEnd="30dp"
                android:paddingBottom="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/register_photo"
                        android:layout_width="107dp"
                        android:layout_height="102dp"
                        android:layout_gravity="center"
                        android:background="@drawable/image_account" />

                    <View
                        android:id="@+id/register_upload_photo"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom|center" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/icon_change_photo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="10dp"
                        android:background="@color/grey"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Upload Photo"
                        android:textColor="@color/white"
                        android:textSize="10sp" />

                </FrameLayout>

                <TextView
                    android:id="@+id/register_name_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="@string/name"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/register_name"
                    android:layout_width="282dp"
                    android:layout_height="38dp"
                    android:background="@drawable/bg_register_field"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/register_surname_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/surname"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/register_surname"
                    android:layout_width="282dp"
                    android:layout_height="38dp"
                    android:background="@drawable/bg_register_field"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/register_nick_name_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/nick_name"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/register_nick_name"
                    android:layout_width="282dp"
                    android:layout_height="38dp"
                    android:background="@drawable/bg_register_field"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/nickName_offer"
                    android:layout_width="282dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="This nickname is busy, you can choose free"
                    android:textColor="@color/red"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/nickName_offer_1"
                    android:layout_width="282dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/nickName_offer_2"
                    android:layout_width="282dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/register_birth_date_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/birth_date"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/register_birth_date"
                    android:layout_width="282dp"
                    android:layout_height="38dp"
                    android:background="@drawable/bg_register_field"
                    android:gravity="center_horizontal"
                    android:hint="DD -- MM -- YYYY"
                    android:padding="10dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/register_mail_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/email"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/register_email"
                    android:layout_width="282dp"
                    android:layout_height="38dp"
                    android:background="@drawable/bg_register_field"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/register_phone_number_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/phone_number"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/register_phone_number_container"
                    android:layout_width="282dp"
                    android:layout_height="38dp"
                    android:background="@drawable/bg_register_field"
                    android:orientation="horizontal">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/number_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_showFlag="true"
                        app:ccp_textSize="14sp" />

                    <EditText
                        android:id="@+id/register_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1.5"
                        android:inputType="number|phone"
                        android:padding="10dp"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/register_password_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/password"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/register_password"
                    android:layout_width="282dp"
                    android:layout_height="38dp"
                    android:background="@drawable/bg_register_field"
                    android:hint="min 8 symbols"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLines="1"
                    android:minEms="8"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/register_confirm_password_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/confirm_password"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/register_confirm_password"
                    android:layout_width="282dp"
                    android:layout_height="38dp"
                    android:background="@drawable/bg_register_field"
                    android:hint="min 8 symbols"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLines="1"
                    android:minEms="8"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/radio_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Male"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Female"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/radio_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Other"
                        android:textSize="12sp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:id="@+id/register_cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:text="@string/cancel_btn"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/register_sign_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_sign_up"
                    android:padding="8dp"
                    android:text="@string/sign_up"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="by signing in you agree to our"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/terms_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/terms_of_services"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="and"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/policy_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view_sign"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:visibility="gone"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loading_yellow" />

            <FrameLayout
                android:id="@+id/frame_sign_loader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mainColorTransparent"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loader_sign_up"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading_yellow" />

    <FrameLayout
        android:id="@+id/bg_loader_sign_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainColorTransparent"
        android:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>


